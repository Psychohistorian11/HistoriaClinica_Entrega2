
@{
    ViewBag.Title = "RegimeChange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/PersonaVista.css" />
</head>
<body>
    <div>
        <h3>Cambio de Tipo de Regimen</h3>
        @if (!string.IsNullOrEmpty(ViewBag.Notificacion))
        {
            <div class="alert alert-danger">@ViewBag.Notificacion</div>
        }
        @using (Html.BeginForm("verificarParaRegimeChange", "Home", FormMethod.Post))
        {
            <table>
                <h4>Para cambiar el tipo de regimen de un paciente debe ingresar su identificación</h4>
                <tr>
                    <td><label>Identificación:                       </label></td>
                    <td><input type="text" name="idRegimeChange" pattern="[0-9]+" oninput="this.value=this.value.replace(/[^0-9]/g,'');" value=" " /></td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td style="padding-right: 20px;"><label> Tipo de Regimen:</label></td>
                    <td>
                        <select name="varTipoRegimenChange" style="width: 300px;">
                            <option value="Contributivo">Contributivo</option>
                            <option value="Subsidiado">Subsidiado</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><br /></td>
                    <td></td>
                </tr>
                <tr>
                    <td><input type="submit" name="enviar" value="Enviar" /></td>
                </tr>
            </table>
        }
    </div>
</body>
</html>

