@model HistoriaClinica_Entrega2.Models.Clinica
@{
    ViewBag.Title = "verPacientes";
}

<html>
<head>
    <title>Pacientes</title>
    <link rel="stylesheet" href="~/Content/verPaciente.css" />
</head>
<body>
    <div>
        <h3>Pacientes</h3>
        <form action="Pacientes" method="post">
                <table>
                    <thead>
                        <tr>
                            <th>Identificación</th>
                            <th>Apellidos</th>
                            <th>Nombre</th>
                            <th>Fecha de Nacimiento</th>
                            <th> </th>

                        </tr>
                    </thead>
                    <tbody>
                        
                            @foreach (var paciente in Model.ListaDePacientes)
                            {
                                <tr>
                                    <td>@paciente.Identificacion </td>
                                    <td>@paciente.Apellidos</td>
                                    <td>@paciente.Nombre</td>
                                    <td>@paciente.FechaNacimiento.ToShortDateString()</td>
                                    <td>
                                        @using (Html.BeginForm("masInformacionVerPaciente", "Home", FormMethod.Post))
                                        {
                                            
                                            <input type="hidden" name="identificacion" value="@paciente.Identificacion" />
                                            <input type="submit" name="Información" value="Más Información" />
                                        }
                                    </td>
                                </tr>
                            }
                         
                        </tbody>
                </table>
</form>
    </div>
</body>
</html>

